# InvenTree Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Site Configuration
# IMPORTANT: Set this to your actual domain (e.g., https://inventree.example.com)
INVENTREE_SITE_URL=http://localhost

# Debug Settings (should be False in production)
INVENTREE_DEBUG=False
INVENTREE_LOG_LEVEL=WARNING
INVENTREE_DB_LOGGING=False

# Database Configuration (PostgreSQL)
INVENTREE_DB_ENGINE=postgresql
INVENTREE_DB_NAME=inventree
INVENTREE_DB_USER=inventree
# IMPORTANT: Change this to a strong password!
INVENTREE_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
INVENTREE_DB_HOST=db
INVENTREE_DB_PORT=5432

# Cache Configuration (Redis)
INVENTREE_CACHE_HOST=redis
INVENTREE_CACHE_PORT=6379

# Secret Key Configuration
# If you set this, it will be used instead of generating one
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(50))"
# INVENTREE_SECRET_KEY=your-secret-key-here

# Auto run migrations on startup
INVENTREE_AUTO_UPDATE=True

# Plugin Configuration
INVENTREE_PLUGINS_ENABLED=True

# Web Server Port (change if needed)
INVENTREE_WEB_PORT=80
INVENTREE_WEB_PORT_HTTPS=443

# Worker Configuration
INVENTREE_GUNICORN_WORKERS=4
INVENTREE_BACKGROUND_WORKERS=4

# Email Configuration (optional, uncomment if using email)
# INVENTREE_EMAIL_HOST=smtp.example.com
# INVENTREE_EMAIL_PORT=587
# INVENTREE_EMAIL_USER=noreply@example.com
# INVENTREE_EMAIL_PASSWORD=email-password
# INVENTREE_EMAIL_USE_TLS=True
# INVENTREE_EMAIL_FROM=noreply@example.com

# Admin Interface
INVENTREE_ADMIN_ENABLED=True
INVENTREE_ADMIN_URL=admin

# Timezone
INVENTREE_TIMEZONE=UTC

# Language
INVENTREE_LANGUAGE=en-us

# Backend Port (expose backend directly on this port)
INVENTREE_BACKEND_PORT=8000

# Frontend API Host (where frontend should make API calls)
# Set this to match your backend URL
# Options:
#   - http://localhost:8000 (if backend exposed on 8000)
#   - http://localhost (if using Nginx proxy)
#   - Leave empty to use window.location.origin (same origin as frontend)
INVENTREE_FRONTEND_API_HOST=http://localhost:8000
